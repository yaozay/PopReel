datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  clerkId    String   @unique
  createdAt  DateTime @default(now())

  // Additional profile fields
  username   String?
  bio        String?
  avatarUrl  String?
}
